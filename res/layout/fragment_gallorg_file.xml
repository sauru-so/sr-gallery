<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:orientation="vertical">

	<TableLayout
		android:id="@+id/go_single_image"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="0dp"
		android:padding="0dp"
		android:shrinkColumns="1"
		android:stretchColumns="1" >

		<TextView
			android:id="@+id/go_file_info_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/go_file_info"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold" />
		<TableRow
			android:id="@+id/go_file_uri"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_uri_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:lines="1"
				android:maxLines="1"
				android:scrollHorizontally="false"
				android:text="@string/go_file_uri" />
			<EditText
				android:id="@+id/go_file_uri_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:inputType="none"
				android:singleLine="true"
				android:textIsSelectable="true" />
		</TableRow>
		<TableRow
			android:id="@+id/go_file_path"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_path_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:lines="1"
				android:maxLines="1"
				android:scrollHorizontally="false"
				android:text="@string/go_file_path" />
			<EditText
				android:id="@+id/go_file_path_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:inputType="none"
				android:singleLine="true"
				android:textIsSelectable="true" />
		</TableRow>
		<TableRow
			android:id="@+id/go_file_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_name_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:lines="1"
				android:maxLines="1"
				android:scrollHorizontally="false"
				android:text="@string/go_file_name" />
			<EditText
				android:id="@+id/go_file_name_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:inputType="none"
				android:singleLine="true"
				android:textIsSelectable="true" />
		</TableRow>
		<TextView
			android:id="@+id/go_file_more_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/go_file_more"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold" />
		<TableRow
			android:id="@+id/go_file_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_size_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:text="@string/go_file_size" />
			<EditText
				android:id="@+id/go_file_size_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:textIsSelectable="true"
				android:inputType="none" />
		</TableRow>
		<TableRow
			android:id="@+id/go_file_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_date_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:text="@string/go_file_date" />
			<EditText
				android:id="@+id/go_file_date_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:textIsSelectable="true"
				android:inputType="none" />
		</TableRow>
		<TableRow
			android:id="@+id/go_file_chksum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/go_file_hash_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_vertical"
				android:text="@string/go_file_hash" />
			<EditText
				android:id="@+id/go_file_hash_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:textIsSelectable="true"
				android:inputType="none" />
		</TableRow>
	</TableLayout>

	<LinearLayout
		android:id="@+id/go_image_thumbs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/go_files_header"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:text="@string/go_files" />

		<GridView
			android:id="@+id/go_thumb_grid"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:layout_gravity="center_horizontal"
			android:gravity="top|center_horizontal"
			android:horizontalSpacing="1dp"
			android:scrollbars="horizontal"
			android:verticalSpacing="1dp" >

		</GridView>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/go_dest_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_gravity="right|center_vertical"
			android:textStyle="bold"
			android:text="@string/go_dest_dir" />
		<Spinner
			android:id="@+id/go_albums_spinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/go_action_bar"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1" >

		<Button
			android:id="@+id/go_action_cancel"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_weight="1"
			android:text="@string/go_action_cancel" />
		<Button
			android:id="@+id/go_action_move"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_weight="1"
			android:text="@string/go_action_move" />
	</LinearLayout>
</LinearLayout>
